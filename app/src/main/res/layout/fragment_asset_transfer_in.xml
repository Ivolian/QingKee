<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_light"
        android:padding="20dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_assets"
            android:hint="资产"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:hint="安装地址"
            app:met_floatingLabel="highlight" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_note"
            android:hint="备注"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/btn_clear_views"
                android:text="清空输入"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                flatui:fl_theme="@array/orange"
                flatui:fl_textAppearance="fl_none"
                flatui:fl_blockButtonEffectHeight="3dp"
                flatui:fl_touchEffect="fl_ease"
                android:layout_marginRight="5dp" />

            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/btn_confirm"
                android:text="确认"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                flatui:fl_theme="@array/grass"
                flatui:fl_textAppearance="fl_none"
                flatui:fl_blockButtonEffectHeight="3dp"
                flatui:fl_touchEffect="fl_ease"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

