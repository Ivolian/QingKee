<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_material_light"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ll_barcode"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/barcode"
                android:hint="条码"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight" />

            <Button
                android:id="@+id/btn_scan_barcode"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描条码" />

        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_aband_value"
            android:hint="报废收入"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_autoValidate="true"
            android:layout_marginTop="10dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_aband_cost"
            android:hint="报废成本"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            app:met_autoValidate="true"
            android:layout_marginTop="10dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_note"
            android:hint="备注"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:met_floatingLabel="highlight"
            android:layout_marginTop="10dp" />

        <com.cengalabs.flatui.views.FlatButton
            android:layout_marginTop="60dp"
            android:id="@+id/btn_confirm"
            android:text="确认"
            android:textSize="@dimen/bigger_textsize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            flatui:fl_theme="@array/grass"
            flatui:fl_textAppearance="fl_none"
            flatui:fl_blockButtonEffectHeight="3dp"
            flatui:fl_touchEffect="fl_ease"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

</ScrollView>

